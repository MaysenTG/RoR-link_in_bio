<div style="background-color: <%= @landingpage.main_bg_colour %>" id="main-bg-color-container">
  <section class="container">
    <div class="container p-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-12 col-xl-6">
          <div class="card" style="background-color: <%= @landingpage.profile_bg_colour %>" style="border-radius: 15px;">
            <div class="card-body text-center">
              <div class="mt-3 mb-4">
                <% if Account.find(@landingpage.account_id).avatar.attached? %>
                  <%= image_tag(Account.find(@landingpage.account_id).avatar, class: "img-fluid rounded", style: "margin: 0 auto; width: 100px;" ) %>
                <% else %>
                  <img id="profile-image" src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava2-bg.webp"
                class="rounded img-fluid" style="margin: 0 auto; width: 100px;" />
                <% end %>
              </div>
              <h4 class="mb-2"><%= Account.find(@landingpage.account_id).name %></h4>
              <p class="text-muted">@<%= Account.find(@landingpage.account_id).landingpage_url %></p>
            </div>
            <!-- Render FB, Twitter and Github icons -->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="d-flex justify-content-center">
                <% if @socials["facebook"] != "" %>
                  <a href="<%= @socials["facebook"] %>" target="_blank" class="btn btn-floating mx-1">
                    <i class="fs-3 bi bi-facebook"></i>
                  </a>
                <% end %>
                <% if @socials["twitter"] != "" %>
                  <a href="<%= @socials["twitter"] %>" target="_blank" class="btn btn-floating mx-1">
                    <i class="fs-3 bi bi-twitter"></i>
                  </a>
                <% end %>
                <% if @socials["github"] != "" %>
                  <a href="<%= @socials["github"] %>" target="_blank" class="btn btn-floating mx-1">
                    <i class="fs-3 bi bi-github"></i>
                  </a>
                <% end %>
                <% if @socials["linkedin"] != "" %>
                  <a href="<%= @socials["linkedin"] %>" target="_blank" class="btn btn-floating mx-1">
                    <i class="fs-3 bi bi-linkedin"></i>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="container">
    <div class="list-group w-auto">
      <% @blocks.each do |block| %>
        <a href="<% if block.url.index('http://') === 0 || block.url.index('https://') === 0 %><%= block.url %><% else %>https://<%= block.url %><% end %>" target="_blank" class="list-group-item list-group-item-action d-flex gap-5 py-3" aria-current="true">
          <% if block.block_image.attached? %>
            <%= image_tag block.block_image, class: "align-self-center flex-shrink-0", style: "margin: 0 auto; max-width: 15rem;" %>
          <% end %>
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0"><%= block.title %></h6>
              <p class="mb-0 opacity-75"><%= block.content %></p>
            </div>
            <small class="opacity-50 text-nowrap"></small>
          </div>
        </a>
        <br/>
      <% end %>
    </div>
  </section>
</div>
